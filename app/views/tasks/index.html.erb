<h1><i class="fas fa-tasks me-2"></i>My Tasks</h1>

<% if @tasks.any? %>
  <% @tasks.each do |task| %>
    <div class="card mb-3">
      <div class="card-body">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="<%= task.id %>" <%= 'checked' if task.completed %>>
          <label class="form-check-label" for="<%= task.id %>">
            <%= link_to task.title, task_path(task) %>
          </label>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="text-muted">No tasks yet. Create your first task!</p>
<% end %>

<%= link_to new_task_path, class: "btn btn-primary" do %>
  <i class="fas fa-plus me-2"></i>Add new task
<% end %>
<br>
